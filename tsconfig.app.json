{
  "extends": [
    "@tsconfig/vite-react/tsconfig.json"
  ],
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "react": [ "./node_modules/@types/react" ]
    },
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "coverage",
    "storybook-static",
    "public",
    "**/*.test.{ts,tsx}"
  ]
}
